generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String         @id @default(cuid())
  name            String?
  email           String?        @unique
  emailVerified   DateTime?
  image           String?
  accounts        Account[]
  sessions        Session[]
  boards          Board[]
  assignedCards   Card[]         @relation("AssignedCards")
  reviewingCards  Card[]         @relation("ReviewingCards")
  teamMemberships TeamMember[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Board {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  columns   Column[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}



model Column {
  id        String   @id @default(cuid())
  name      String
  order     Int
  wipLimit  Int?     // WIP limit for this column
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards     Card[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([boardId])
}

model Team {
  id             String       @id @default(cuid())
  name           String       // Matches Discord team name exactly (e.g., "Electronics Team")
  slug           String       @unique // URL-safe identifier (e.g., "electronics-team")
  discordChannel String?      // Optional Discord channel reference (e.g., "#electronics-team")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  cards          Card[]
  members        TeamMember[]
}

// Team membership with roles
model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      String   @default("MEMBER") // LEAD or MEMBER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([teamId, userId]) // One membership per user per team
  @@index([teamId])
  @@index([userId])
}

model Card {
  id                 String    @id @default(cuid())
  title              String
  description        String?   // "What to do"
  acceptanceCriteria String?   // "Done looks like"
  priority           String    @default("P2") // P0, P1, P2, P3
  taskType           String?   // Design, Build, Test, Docs, Procurement
  inputsLinks        String?   // CAD links, Google Drive, datasheets, rule refs (can be multiline)
  artifacts          String?   // Photo URLs, CAD files, test data links (can be multiline)
  subsystem          String?   // @deprecated - Use teamId instead. Kept for migration.
  isOnboarding       Boolean   @default(false)
  isBlocked          Boolean   @default(false)
  blockedReason      String?
  dueDate            DateTime?
  order              Int
  columnId           String
  column             Column    @relation(fields: [columnId], references: [id], onDelete: Cascade)
  
  // Ownership
  assigneeId         String?   // Owner - required once in Doing
  assignee           User?     @relation("AssignedCards", fields: [assigneeId], references: [id])
  
  // Review
  reviewerId         String?   // Reviewer - required once in Review
  reviewer           User?     @relation("ReviewingCards", fields: [reviewerId], references: [id])
  isApproved         Boolean   @default(false) // Lead must approve to move to Done
  
  teamId             String?   // Team this card belongs to (nullable for migration)
  team               Team?     @relation(fields: [teamId], references: [id])
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  @@index([columnId])
  @@index([assigneeId])
  @@index([reviewerId])
  @@index([teamId])
}
